#!/bin/bash

PID=$(/bin/ps -ef | /usr/bin/grep 7002 | /usr/bin/grep -v grep | /usr/bin/awk '{ print $2 }')

if [ "DISCONNECTED$PID" == "DISCONNECTED" ]
then
        echo "IoT : establishing connection to master"
       (/usr/bin/ssh -i /Users/slave/.ssh/id_rsa -fN -R 7002:localhost:22 -L 1884:localhost:1883 slave@master.thingtosell.com) 2>&1 > /Users/slave/log/ssh-tunnel-plex-7002.log &
else
        echo "IoT : $PID connection master => GOOD"
fi
